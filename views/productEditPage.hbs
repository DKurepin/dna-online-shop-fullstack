<div class="main__gradient"></div>
<div class="product_info">
    <h2>Product Information</h2>
    <form class="editProductForm">
        <label for="id">Product ID:</label><br>
        <input type="text" id="id" name="id" value="{{id}}" readonly class="input-field"><br>
        <label for="name">Name:</label><br>
        <input type="text" id="name" name="name" value="{{name}}" required><br>
        <label for="description">Description:</label><br>
        <input type="text" id="description" name="description" value="{{description}}" required><br>
        <label for="photo">Photo:</label><br>
        <input type="text" id="photo" name="photo" value="{{photo}}" required><br>
        <label for="price">Price:</label><br>
        <input type="text" id="price" name="price" value="{{price}}" required><br>
        <label for="stock">Stock:</label><br>
        <input type="text" id="stock" name="stock" value="{{stock}}" required><br>
        <label for="categoryId">Category ID:</label><br>
        <input type="text" id="categoryId" name="categoryId" value="{{categoryId}}" required><br>
        <input type="submit" value="Save Changes" class="saveButton">
        <input type="button" value="Cancel" class="cancelButton" onclick="window.location.href = '../{{id}}'">
    </form>
</div>
<script src="{{editProductScript}}"></script>
