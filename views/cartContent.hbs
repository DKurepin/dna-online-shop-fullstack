<div class="main__gradient"></div>
<div class="user_cart__info">
    <div class="user_cart__info_general">
        <h2>Cart</h2>
        <h3>Cart Total: {{cartTotal}} RUB</h3>
        <form class="createNewUserOrderForm">
            <label for="userId">User ID:</label>
            <input type="text" id="userId" name="userId" required class="input-field" value="{{userId}}" readonly>
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" required class="input-field" placeholder="Enter your address", value="{{userAddress}}">
            <input type="submit" value="Create Order" class="submit-button">
        </form>

    </div>
    <div class="user_cart__info_products">
        <h3>Products</h3>
        <ul>
            {{#each productInfo}}
                <li>
                    <a href="/product/{{this.id}}">Page of product: {{this.id}}</a>
                    <img src="../{{this.photo}}" alt="{{this.name}}">
                    <p>Цена: {{ this.price }} RUB</p>
                    <p>Количество: {{this.quantity}}</p>
                    <label>
                        <input type="text" value="{{this.userProductId}}" class="userProductId" style="display: none;">
                    </label>
                    <input type="button" value="Delete" class="productCartDeleteButton" data-user-product-id="{{this.userProductId}}">
                </li>
            {{/each}}
        </ul>
    </div>
</div>
<script src="{{cartContentDeleteScript}}"></script>
<script src="{{cartContentNewOrderScript}}"></script>